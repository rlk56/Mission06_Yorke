@{
    ViewData["Title"] = "Movie Form";
}
@model Movie

<html>
    <body>

        <form method="post">
            <h2>Add Movie to Collection</h2><br />
            <label asp-for="Title">Title:</label><br>
            <input asp-for="Title" type="text" required><br><br>

            <label asp-for="Year">Year:</label><br>
            <input asp-for="Year" type="number" id="year" min="1900" required><br><br>

            <label asp-for="Director">Director:</label><br>
            <input asp-for="Director" type="text" id="director" required><br><br>

            <label asp-for="Category">Category:</label><br> 
@*             I made the Category a dropdown menu of the categories already found dataset plus other for anything new *@
            <select asp-for="Category" id="category" required>
                <option value="" disabled selected hidden></option>
                <option value="Miscellaneous">Miscellaneous</option>
                <option value="Drama">Drama</option>
                <option value="Television">Television</option>
                <option value="Horror/Suspense">Horror/Suspense</option>
                <option value="Comedy">Comedy</option>
                <option value="Family">Family</option>
                <option value="Action/Adventure">Action/Adventure</option>
                <option value="VHS">VHS</option>
                <option value="Other">Other</option>
            </select><br><br>

            <label asp-for="Rating">Rating:</label><br>
            <select asp-for="Rating" id="rating" required>
                <option value="" disabled selected hidden></option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select><br><br>

            <label asp-for="Edited">Edited:</label>
            <label><input asp-for="Edited" type="radio" value="true">Yes</label>
            <label><input asp-for="Edited" type="radio" value="false">No</label><br>


            <label asp-for="Lent_To">Lent To:</label><br>
            <input asp-for="Lent_To" type="text" id="lent_to"><br><br>

            <label asp-for="Notes">Notes (max 25 characters):</label><br>
            <input asp-for="Notes" type="text" id="notes" maxlength="25"><br><br>

            <button type="submit">Submit</button>
        </form>

    </body>
</html>
